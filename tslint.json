{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier",
    "tslint-react"
  ],
  "rules": {
    "interface-name": false,
    "semicolon": true,
    "object-literal-sort-keys": false,
    "no-console": {
      "severity": "warn"
    },
    "ordered-imports": {
      "severity": "warn"
    },
    "jsx-boolean-value": false,
    "indent": [
      true,
      "spaces",
      2
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always"
      }
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-type-operator",
      "check-preblock"
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "no-return-await": true,
    "no-unnecessary-type-assertion": true,
    "await-promise": true,
    "ban-comma-operator": true,
    "no-floating-promises": false,
    "no-void-expression": false,
    "eofline": true,
    "linebreak-style": [
      true,
      "LF"
    ],
    "no-irregular-whitespace": true,
    "one-line": [
      true,
      "check-catch",
      "check-finally",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "prefer-template": true,
    "return-undefined": true,
    "no-inferrable-types": true,
    "member-access": [
      true,
      "check-accessor",
      "check-constructor",
      "check-parameter-property"
    ],
    "jsx-no-multiline-js": false,
    "no-conditional-assignment": false,
    "only-arrow-functions": false,
    "max-classes-per-file": false,
    "array-type": [true, "array-simple"]
  },
  "linterOptions": {
    "exclude": [
      "Takefile",
      "src/**/*.json"
    ]
  }
}
